<project name="juddi-dist" default="package-dist" basedir=".">
	<property file="package.properties"/>
	<property name="dist.dir" value="${basedir}/target/dist"/>

	<target name="package-dist">
		<mkdir dir="${dist.dir}"/>
		<mkdir dir="${dist.dir}/docs"/>
		<copy file="${dependency.juddi.docs}"
			todir="${dist.dir}"/>
		<copy file="${dependency.juddi.sources}"
			todir="${dist.dir}"/>
		<copy file="${dependency.juddi.javadoc}"
			todir="${dist.dir}"/>
		<copy file="${dependency.juddiv3.war}"
			tofile="${dist.dir}/juddiv3.war"/>
		<copy file="${dependency.juddi.samples}"
			todir="${dist.dir}"/>
		<copy file="LICENSE"
			todir="${dist.dir}"/>
	</target>
</project>
