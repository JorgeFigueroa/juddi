			<name>Andy Cutright</name> 
			<id>acutright</id> 
			<email>acutright AT apache.org</email> 
			<organization></organization> 
		</developer>
		<developer>
			<name>Anil Saldhana</name> 
			<id>anil</id> 
			<email>anil AT apache.org</email> 
			<organization></organization> 
		</developer>
	</developers>
	<contributors>
		<contributor>
			<name>Anou Manavalan</name> 
			<email>anou_mana AT apache.org</email> 
			<organization></organization> 
		</contributor>
		<contributor>
			<name>Chris Dellario</name> 
			<email>dellario AT comcast.net</email> 
			<organization></organization> 
		</contributor>
	</contributors>

	<licenses>
		<license>
			<name>Apache License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

	<build>
	    <finalName>${artifactId}-${version}</finalName>
		<directory>maven</directory>
		<sourceDirectory>src</sourceDirectory>
		<outputDirectory>build/classes</outputDirectory> 
		<resources></resources>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId> 
				<inherited>true</inherited> 
				<configuration>
				<source>1.4</source> 
				<target>1.4</target> 
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-surefire-plugin</artifactId> 
				<version>2.1.3</version> 
				<inherited>true</inherited> 
				<configuration>
				<skip>true</skip> 
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
  