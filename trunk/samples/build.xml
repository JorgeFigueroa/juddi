  <!-- Executes the add_publisherAssertions sample                         -->
  <!-- =================================================================== -->
  <target name="add_publisherAssertions" depends="compile">
    <java classname="AddPublisherAssertionsSample" fork="yes">
      <classpath refid="project.classpath"/>
      <arg value="${prop.file}"/>
  	</java>
  </target>
